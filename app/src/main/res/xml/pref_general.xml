<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
        <EditTextPreference
            android:title="@string/location_setting"
            android:key="@string/location_key"
            android:defaultValue="@string/location_default"
            android:inputType="number"
            android:singleLine="true"
        />
        <ListPreference
            android:title="@string/units_setting"
            android:key="@string/units_key"
            android:defaultValue="@string/units_default"
            android:entries="@array/units_keys"
            android:entryValues="@array/units_values" />
</PreferenceScreen>