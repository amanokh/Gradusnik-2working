<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp"
    android:longClickable="true"
    android:background="?android:attr/selectableItemBackground">

        <TextView
            android:id="@+id/list_item_title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="АС Байкал ТВ"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/list_item_addr_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/list_item_title_textview"
            android:layout_centerVertical="true"
            android:paddingLeft="12dp"
            android:fontFamily="sans-serif"
            android:text="150 м"
            android:textColor="@color/secondary_text_default_material_light" />

    <TextView
            android:id="@+id/list_item_forecast_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:fontFamily="sans-serif-light"
            android:text="+88°"
            android:textColor="@android:color/black"
            android:textSize="30sp" />

    <TextView
        android:id="@+id/list_item_forecast_wind"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:fontFamily="sans-serif"
        android:text="20 м/c"
        android:textColor="@color/secondary_text_default_material_light"
        android:layout_width="120dp" />

    <TextView
        android:text="NW"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/list_item_forecast_wind"
        android:id="@+id/list_item_forecast_degree"
        android:gravity="right"
        android:paddingRight="12dp"
        android:layout_width="36dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_navigate"
        android:layout_toLeftOf="@+id/list_item_forecast_degree"
        android:id="@+id/list_item_image_wind"
        android:layout_centerVertical="true"
        android:paddingRight="4dp"
        android:visibility="visible"
        android:scaleX="0.8"
        android:scaleY="0.8" />
</RelativeLayout>